<Window x:Class="flappy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flappy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
		KeyDown="OnKeyDown" Focusable="True">
	<Canvas x:Name="GameCanvas" Background="#FF42B3E2">

		<Rectangle x:Name="Bird"
                   Width="30" Height="30" StrokeThickness="1"
                   Canvas.Left="100" Canvas.Top="150">
			<Rectangle.Fill>
				<ImageBrush ImageSource="/birb.png"/>
			</Rectangle.Fill>
		</Rectangle>

		<TextBlock x:Name="DebugText" Canvas.Left="10" Canvas.Top="10" FontSize="14" FontWeight="Bold"/>
	</Canvas>
</Window>
